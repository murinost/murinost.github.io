<script>
const dict = {
  "я": "ч",
  "друг": "друн",
  "папа": "батч",
  "мама": "мамп",
  "баня": "банька",
  "мурино": "мурино",
  "молочное": "молочное",
  "мытищи": "мытищи",
  "меллстрой": "меллстройность",
  "дед": "дод"
};

let forward = true;

const input = document.getElementById("input");
const output = document.getElementById("output");
const swapBtn = document.getElementById("swap");
const fromEl = document.getElementById("from");
const toEl = document.getElementById("to");
const clearBtn = document.getElementById("clear");

function addOst(word){
  if(!word) return word;
  if(word.endsWith("ость")) return word;
  return word + "ость";
}

function toMurin(text){

  let words = text.toLowerCase().match(/[а-яё]+/gi);

  if(!words) return text;

  let translated = words.map(word => {

    if(dict[word]){
      word = dict[word];
    }

    word = addOst(word);

    return word;
  });

  return translated.join(" ");
}

function fromMurin(text){

  let words = text.toLowerCase().match(/[а-яё]+/gi);

  if(!words) return text;

  let translated = words.map(word => {

    word = word.replace(/ость$/,"");

    Object.entries(dict).forEach(([k,v])=>{
      if(word === v) word = k;
    });

    return word;
  });

  return translated.join(" ");
}

function translate(){

  const txt = input.value.trim();

  if(!txt){
    output.textContent = "Перевод появится здесь...";
    return;
  }

  output.textContent = forward ? toMurin(txt) : fromMurin(txt);
}

swapBtn.onclick = ()=>{
  forward = !forward;

  fromEl.textContent = forward ? "Русский" : "Муринский";
  toEl.textContent = forward ? "Муринский" : "Русский";

  translate();
};

clearBtn.onclick = () => {
  input.value = "";
  translate();
};

input.addEventListener("input", translate);

translate(); // начальный вызов
</script>

</body>
